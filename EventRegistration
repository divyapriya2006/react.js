
import React from "react";

function EventRegistration() {
  const registerEvent = () => {
    const name = prompt("Enter your Name:");
    if (!name) {
      alert("Registration cancelled. Name is required.");
      return;
    }

    const email = prompt("Enter your Email:");
    if (!email) {
      alert("Registration cancelled. Email is required.");
      return;
    }

    const eventName = prompt("Enter Event Name:");
    if (!eventName) {
      alert("Registration cancelled. Event name is required.");
      return;
    }

    const confirmation = confirm(
      `Please confirm your registration:\n\nName: ${name}\nEmail: ${email}\nEvent: ${eventName}`
    );

    if (confirmation) {
      alert(
        `âœ… Registration Successful!\n\nThank you ${name} for registering for ${eventName}.`
      );
    } else {
      alert("Registration cancelled by user.");
    }
  };

  return (
    <div style={{ textAlign: "center", marginTop: "50px" }}>
      <h1>ðŸŽ‰ Event Registration</h1>
      <button
        onClick={registerEvent}
        style={{ padding: "10px 20px", fontSize: "16px" }}
      >
        Register Now
      </button>
    </div>
  );
}

export default EventRegistration;

App.jsx


import React from "react";
import EventRegistration from "./Coreconcepts/Task/EventRegistration";

function App() {
  return (
    <div>
      <EventRegistration />
    </div>
  );
}

export default App;



